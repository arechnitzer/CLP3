\newcommand{\couleurs}[1][]{%
    \setkeys{boxedtheorem}{#1}
    \tikzstyle{fancytitle} =[draw=\titleboxcolor, rounded 
			    corners=\titlecornersize, 
			    fill=\titlebackground, text= \titlecolor]
    \tikzstyle{mybox} = [draw=\boxcolor, fill=\background, very thick,
                        rectangle, rounded corners=\boxcornersize, 
			inner sep=10pt, inner ysep=20pt]
    \tikzstyle{mybox2} = [draw=\boxcolor, fill=\background, very thick,
                        rectangle with rounded corners, 
			rectangle corner radius north west=0pt,
			inner sep=10pt, inner ysep=20pt]
}


